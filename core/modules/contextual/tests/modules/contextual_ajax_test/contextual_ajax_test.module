<?php

/**
 * @file
 * Test Contextual links that use Ajax
 */

/**
 * Implements hook_contextual_links_view_alter().
 *
 * Change Configure Blocks into modal links.
 */
function contextual_ajax_test_contextual_links_view_alter(&$element, $items) {
  if (isset($element['#links']['contextual-ajax-test'])) {
    $element['#links']['contextual-ajax-test']['attributes'] = [
      'class' => ['use-ajax'],
      'data-dialog-type' => 'modal',
    ];
  }
}
